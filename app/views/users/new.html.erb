<% provide(:title, '新規登録') %>

<div class=" jumbotron top">
  <div class="before-login-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h3 class='form-title center'>新規登録</h3>

        <%= form_for(@user, url: users_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, 'ユーザー名', class:'form-label'%>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, 'メールアドレス', class:'form-label'%>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, 'パスワード', class:'form-label'%>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, 'パスワード（確認用）', class:'form-label'%>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <div class=" form-group">
          <%= f.label :category_id, 'カテゴリー', class:'form-label'%>
          <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control' %>
        </div>

        <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>
        <p class='form-message center'>登録がお済みの方は <%= link_to "こちら", login_path %></p>
      </div>
    </div>
  </div>
</div>
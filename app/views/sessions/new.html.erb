<% provide(:title, 'ログイン') %>

<div class=" jumbotron top">
  <div class="before-login-container">
    <div class="row user_form">
      <h3 class='form-title center'>ログイン</h3>
      <div class="login-form-container">
        <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :メールアドレス, class:'form-label', id:'u-email-label' %>
        <%= f.email_field :email, class: 'form-control', id:'u-email' %>
        <%= f.label :パスワード, class:'form-label', id:'u-pass-label' %>
        <%= f.password_field :password, class: 'form-control', id:'u-pass' %>
        <div class="enter-btn">
          <input type="submit" value="ログイン" class="btn btn-lg btn-primary" id="u-btn" disabled><br>
        </div>
      </div>
      <div class="guest-login-btn-container">
        <a class="btn btn-lg btn-primary guest" data-method="post" href="<%= guest_login_path(email: "construction@guestuser.com") %>">
          <p>ゲストログイン</p><span>as 工事管理部署</span>
        </a>
        <a class="btn btn-lg btn-primary guest" data-method="post" href="<%= guest_login_path(email: "supply-demand@guestuser.com") %>">
          <p>ゲストログイン</p><span>as 需給管理部署</span>
        </a>
        <a class="btn btn-lg btn-primary guest" data-method="post" href="<%= guest_login_path(email: "admin@admin.com") %>">
          <p>ゲストログイン</p><span>as 管理ユーザー</span>
        </a>
        <% end %>
        <p class='form-message center'>登録がお済みでない方は <%= link_to "こちら", signup_path %></p>
      </div>
    </div>
  </div>
</div>
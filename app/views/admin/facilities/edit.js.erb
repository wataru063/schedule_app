var selectCount = '<%== @select_count %>'
var oils = {};
oils = $.parseJSON('<%== @oil_selects %>');
var nextSelectCount = Number(selectCount)

if (selectCount.length) {
var n = 1
$.each(oils, function(index, value){
  if (n == nextSelectCount) {
    $(`#oil-select-${nextSelectCount}`).append('<option value=' + index + ' selected>' + value + '</option>');
  } else {
    $(`#oil-select-${nextSelectCount}`).append('<option value=' + index + '>' + value + '</option>');
  }
  n++
});
} else {
  $('.facility_modal').html("<%= escape_javascript(render 'admin/facilities/partial/edit') %>")
  $('#facilityEditModal').modal('show');
}

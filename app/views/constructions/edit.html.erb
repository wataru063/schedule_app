<% provide(:title, '登録情報編集') %>

<div class="container">
  <h2 class="title">登録情報編集</h2>
  <div class="row construction-row">
    <%= form_for(@construction, method: :patch) do |f| %>
    <div class="col-sm-6 col-sm-offset-3">
      <%= render 'shared/error_messages', object: f.object %>
    </div>

    <div class="row row-construction-form">
      <div class="col-sm-5">

        <%= f.label :name, '工事名', class:'form-label-login'%>
        <%= f.text_field :name, class: 'form-control', id:"const-name" %>
        <div class=" form-group select">
          <%= f.label :status_id, '現状況', class:'form-label-login'%>
          <%= f.collection_select :status_id, @status, :id, :name, {}, class: 'form-control' %>
        </div>
        <div class=" form-group">
          <%= f.label :facility_id, '設備制約', class:'form-label-login'%>
          <%= f.collection_select :facility_id, @facility, :id, :name,
                                  {include_blank: "選択しない"}, class: 'form-control' %>
        </div>
        <div class=" form-group">
          <%= f.label :oil_id, '油種制約', class:'form-label-login'%>
          <%= f.collection_select :oil_id, @oil, :id, :name,
                {include_blank: "-- 選択してください --"}, class: 'form-control' %>
        </div>
      </div>

      <div class="col-sm-5">
        <%= f.label :start_at, '工事開始日時', class:'form-label-login'%>
        <div class="row">
          <div class="col-sm-7">
            <input class="form-control" type="date" name="construction[start_at_date]" id="construction_status" value="<%= @start_at_date %>">
          </div>
          <div class="col-sm-5 time">
            <%= f.time_select :start_at, include_blank: true, minute_step: 30, class: 'form-control time' %>
          </div>
        </div>
        <%= f.label :end_at, '工事終了日時', class:'form-label-login'%>
        <div class="row">
          <div class="col-sm-7">
            <input class="form-control" type="date" name="construction[end_at_date]" id="construction_status" value="<%= @end_at_date %>">
          </div>
          <div class="col-sm-5 time">
            <%= f.time_select :end_at, include_blank: true, minute_step: 30, class: 'form-control time' %>
          </div>
        </div>
        <div class=" form-group">
          <%= f.label :user_id, '担当者', class:'form-label-login'%>
          <%= f.collection_select :user_id, @user, :id, :name,
                                  { selected: current_user.id }, class: 'form-control' %>
        </div>
        <%= f.label :notice, '特記事項', class:'form-label-login '%>
        <%= f.text_area :notice, placeholder: "任意", class: 'form-control notice' %>
      </div>
    </div>

    <%= f.submit "編集", class: "btn btn-loggedIn col-sm-6 col-sm-offset-3", id:"const-edit-save" %>
    <% end %>
  </div>
</div>

<script>
  $(function() {
    $('#const-edit-save').attr('disabled', false);
    $('#const-name').keyup(function() {
      if (!$(this).val().trim()) {
        $('#const-edit-save').attr('disabled', true);
      } else {
        $('#const-edit-save').attr('disabled', false);
      }
    });
  });
</script>